.page-title.data-v-bde7e025 {
  flex: 1;
  margin: 0;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
}
.mode-switch.data-v-bde7e025 {
  margin-right: 16rpx;
  --el-switch-on-color: var(--ep-color-success, #67C23A);
  transform: scale(0.8);
  /* 缩小开关大小以适应 uni-app 默认开关样式 */
  transform-origin: right center;
}

/* 对话式问答容器 */
.qa-container.data-v-bde7e025 {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  /* 确保层级正确 */
  z-index: 1;
  /* 确保内容在背景上方 */
}
.messages-list.data-v-bde7e025 {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  padding-bottom: 32rpx;
}
.message.data-v-bde7e025 {
  max-width: 85%;
  display: flex;
  margin-bottom: 16rpx;
}
.message.user.data-v-bde7e025 {
  align-self: flex-end;
}
.message.assistant.data-v-bde7e025,
.message.system.data-v-bde7e025 {
  align-self: flex-start;
}
.message-content.data-v-bde7e025 {
  padding: 24rpx 32rpx;
  border-radius: 32rpx;
  position: relative;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  font-size: 30rpx;
  line-height: 1.5;
}
.message.user .message-content.data-v-bde7e025 {
  background-color: var(--ep-color-success, #67C23A);
  color: white;
  border-top-right-radius: 8rpx;
}
.message.assistant .message-content.data-v-bde7e025 {
  background-color: rgba(255, 255, 255, 0.8);
  -webkit-backdrop-filter: blur(10rpx);
          backdrop-filter: blur(10rpx);
  color: var(--text-primary, #1e293b);
  border-top-left-radius: 8rpx;
}
.message.system .message-content.data-v-bde7e025 {
  background-color: rgba(100, 116, 139, 0.1);
  color: var(--text-secondary, #64748b);
  border-radius: 24rpx;
  font-size: 28rpx;
  width: 100%;
  text-align: center;
}
.assistant-badge.data-v-bde7e025, .system-badge.data-v-bde7e025 {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  margin-bottom: 8rpx;
  opacity: 0.7;
}

/* 输入区域 */
.input-container.data-v-bde7e025 {
  padding: 24rpx 32rpx 40rpx;
  background-color: rgba(255, 255, 255, 0.9);
  -webkit-backdrop-filter: blur(20rpx);
          backdrop-filter: blur(20rpx);
  box-shadow: 0 -2rpx 6rpx rgba(0, 0, 0, 0.05);
  z-index: 10;
  border-radius: 32rpx 32rpx 0 0;
  margin-top: 16rpx;
  position: relative;
  /* 确保层级正确 */
}
.input-area.data-v-bde7e025 {
  display: flex;
  gap: 16rpx;
  align-items: flex-end;
  /* Align textarea and button at the bottom */
}
.uni-textarea-input.data-v-bde7e025 {
  flex: 1;
  min-height: 64rpx;
  /* Adjust min-height for textarea */
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  border: 1px solid #EBEEF5;
  /* Add border for textarea */
  font-size: 30rpx;
  line-height: 1.5;
  box-sizing: border-box;
}
.send-btn.data-v-bde7e025 {
  padding: 0 40rpx;
  height: 80rpx;
  border-radius: 24rpx;
  transition: all 0.3s;
  background-color: var(--ep-color-success, #67C23A);
  border-color: var(--ep-color-success, #67C23A);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

